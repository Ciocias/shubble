extends ./layout

block body
  .w3-container.w3-center
    div.w3-card-8.w3-white
      h3= image.alt
      img(src=image.src alt=image.alt)
      div.w3-container.w3-center
        h2= quote.text
        a(href=quote.link)= quote.author
    footer.w3-container
      form(method='POST' action='http://127.0.0.1:3000/tweet')
        input(type='hidden' name='link' value=image.src)
        input(type='hidden' name='quote' value=quote.text)
        input(type='hidden' name='author' value=quote.author)
        a(href='http://127.0.0.1:3000/home').w3-btn-floating-large.w3-left.w3-blue R
        input(type='submit' name='submit' value='S').w3-btn-floating-large.w3-right.w3-blue